<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/form_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primarymenu"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido, {usuario}"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:textSize="20dp"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_user"
                    android:layout_height="wrap_content"
                    android:hint="   Usuario"
                    android:background="@drawable/form_shape">
                </EditText>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Con contrase침a"
                    android:layout_marginBottom="5dp">
                </RadioButton>

                <EditText
                    android:textSize="20dp"
                    android:inputType = "textPassword"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                    android:layout_height="wrap_content"
                    android:hint="   Contrase침a"
                    android:background="@drawable/form_shape">
                </EditText>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recuerda mi sesi칩n"
                    android:layout_marginBottom="5dp">
                </RadioButton>

                <Button
                    android:layout_marginBottom="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="80dp"
                    android:text="Iniciar sesi칩n"

                    android:background="@drawable/text_edit"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>