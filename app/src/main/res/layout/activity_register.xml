<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/form_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primarymenu"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empieza a utilizar la app ahora!"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añade una foto"
                    android:background="@drawable/form_shape"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:textSize="20dp"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_user"
                    android:layout_height="wrap_content"
                    android:hint="   Usuario"
                    android:background="@drawable/form_shape">
                </EditText>

                <EditText
                    android:textSize="20dp"
                    android:inputType = "textPassword"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:drawableStart="@drawable/ic_mail"
                    android:layout_height="wrap_content"
                    android:hint="   Correo electrónico"
                    android:background="@drawable/form_shape">
                </EditText>

                <EditText
                    android:textSize="20dp"
                    android:inputType = "textPassword"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                    android:layout_height="wrap_content"
                    android:hint="   Contraseña"
                    android:background="@drawable/form_shape">
                </EditText>

                <EditText
                    android:textSize="20dp"
                    android:inputType = "textPassword"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingVertical="15dp"
                    android:drawableStart="@drawable/ic_baseline_remove_red_eye_24"
                    android:layout_height="wrap_content"
                    android:hint="   Repetir contraseña"
                    android:background="@drawable/form_shape">
                </EditText>

                <Button
                    android:layout_marginBottom="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="80dp"
                    android:text="Iniciar sesión"

                    android:background="@drawable/text_edit"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>