<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ETask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item> <!-- Color primario -->
        <item name="colorPrimaryVariant">@color/primaryVariant</item> <!-- Color primario (tono menor o mayor) -->
        <item name="colorOnPrimary">@color/primaryOn</item> <!-- Fuente del color primario -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item> <!-- Color secundario -->
        <item name="colorSecondaryVariant">@color/secondaryVariant</item> <!-- Color secundario (tono menor o mayor) -->
        <item name="colorOnSecondary">@color/onSecondary</item> <!-- Fuente del color secundario-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="background">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ETask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ETask.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ETask.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>